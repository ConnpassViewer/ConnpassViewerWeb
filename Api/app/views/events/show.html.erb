<div class="container">
  <div class="row">
      <div class="col s6">
        <ul class="collection with-header">
          <li class="collection-header"><h5><%= @event.title %></h5></li>
          <li class="collection-item avatar">
            <i class="material-icons circle purple accent-4">subtitles</i>
            <span class="title">概要</span>
            <p><%= @event.catch %><br>
            </p>
          </li>
          <li class="collection-item avatar">
            <i class="material-icons circle purple accent-4">web</i>
            <span class="title">イベントページ</span>
            <p><%= link_to @event.event_url, @event.event_url %><br>
            </p>
          </li>
          <li class="collection-item avatar">
            <i class="material-icons circle purple accent-4">search</i>
            <span class="title">イベントid</span>
            <p><%= @event.event_id %><br>
            </p>
          </li>
          <li class="collection-item avatar">
            <i class="material-icons circle purple accent-4">date_range</i>
            <span class="title">時間</span>
            <p><%= @event.started_at %> ~ <%= @event.ended_at %><br>
            </p>
          </li>
          <li class="collection-item avatar">
           <i class="material-icons circle purple accent-4">place</i>
           <span class="title">場所</span>
           <p><%= @event.address %><br>
           </p>
         </li>
        </ul>
      </div>

      <div class="col s6">
        <div class="card">
        <div class="card-image">
          <%= image_tag @event.img_url%>
        </div>
        <div class="card-action">
          <%= link_to "Go to the connpass page", @event.event_url, :target=> "_blank" %>
          <%= link_to 'Back', events_path, :class => "waves-effect waves-light btn" %>
        </div>
      </div>
      </div>
  </div>
</div>
