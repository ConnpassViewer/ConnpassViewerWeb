<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Catch</th>
      <th>Img url</th>
      <th>Event url</th>
      <th>Event</th>
      <th>Started at</th>
      <th>Ended at</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.catch %></td>
        <td><%= event.img_url %></td>
        <td><%= event.event_url %></td>
        <td><%= event.event_id %></td>
        <td><%= event.started_at %></td>
        <td><%= event.ended_at %></td>
        <td><%= event.address %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

